<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="General">

        <Preference
            app:iconSpaceReserved="false"
            app:key="theme"
            app:summary="Default"
            app:title="Theme" />

        <Preference
            app:iconSpaceReserved="false"
            app:summary="Manage notification settings"
            app:title="Notifications" />

        <Preference
            android:key="clear_search_history"
            app:iconSpaceReserved="false"
            app:summary="Remove searches you have performed from this device"
            app:title="Clear local search history" />

        <Preference
            android:key="clear_library"
            app:iconSpaceReserved="false"
            app:summary="Remove movies in the library"
            app:title="Clear library" />
    </PreferenceCategory>
</PreferenceScreen>
